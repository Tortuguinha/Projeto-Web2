generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuthSession {
  id           Int       @id @default(autoincrement())
  employeeId   Int // sem @relation
  refreshToken String    @unique
  ipAddress    String?
  userAgent    String?
  expiresAt    DateTime
  createdAt    DateTime  @default(now())
  revokedAt    DateTime?
  revoked      Boolean   @default(false)
}

model LoginAttempt {
  id         Int      @id @default(autoincrement())
  employeeId Int?
  email      String?
  success    Boolean
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
}
